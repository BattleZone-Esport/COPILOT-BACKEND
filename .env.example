# ============================================================================
# Ureshii-Partner Backend Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# Environment: development or production
ENVIRONMENT=development
# Log level: debug, info, warning, error, critical
LOG_LEVEL=info
# CORS origins (comma-separated, use * for all in dev only)
APP_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# MongoDB connection string (required)
MONGODB_URI=mongodb://localhost:27017
# Or use MONGO_URI as alias
# MONGO_URI=mongodb://localhost:27017
# Database name
MONGODB_DB=ureshii_partner

# ----------------------------------------------------------------------------
# Authentication Settings
# ----------------------------------------------------------------------------
# Enable/disable authentication
AUTH_ENABLED=true
# Secret key for sessions and JWT (required in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
AUTH_SECRET_KEY=your-secret-key-here-must-be-32-bytes-or-more
# OAuth Provider (currently only google supported)
AUTH_PROVIDER=google
# Google OAuth credentials
AUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# ----------------------------------------------------------------------------
# OpenRouter/LLM Configuration
# ----------------------------------------------------------------------------
# OpenRouter API key (required for AI features)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
# Optional: Site URL and name for OpenRouter tracking
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_SITE_NAME=Ureshii Partner Dev

# LLM Settings
PROMPT_MAX_CHARS=2000
# Default models for each agent
DEFAULT_CODER_MODEL=qwen/qwen3-coder:free
DEFAULT_DEBUGGER_MODEL=deepseek/deepseek-chat-v3.1:free
DEFAULT_FIXER_MODEL=nvidia/nemotron-nano-9b-v2:free
DEFAULT_CHATBOT_MODEL=qwen/qwen3-30b-a3b:free

# ----------------------------------------------------------------------------
# Queue Configuration
# ----------------------------------------------------------------------------
# Queue backend: redis, qstash, or none
QUEUE_BACKEND=none
# Redis configuration (if using redis)
REDIS_URL=redis://localhost:6379/0
# QStash configuration (if using qstash)
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=your-qstash-token
QSTASH_CURRENT_SIGNING_KEY=your-current-signing-key
QSTASH_NEXT_SIGNING_KEY=your-next-signing-key
QSTASH_DESTINATION_URL=https://your-app.com/api/v1/webhooks/qstash
QSTASH_VERIFY_SIGNATURE=true
# Job lock timeout (seconds)
JOB_LOCK_TIMEOUT=300

# ----------------------------------------------------------------------------
# GitHub Integration (Optional)
# ----------------------------------------------------------------------------
# GitHub personal access token for PR creation
GITHUB_TOKEN=ghp_your_github_token_here